package main

import (
	_ "github.com/lib/pq"
	"database/sql"
	"log"
)

func main() {
	db, err := sql.Open("postgres", "user=admin dbname=martinitodos sslmode=verify-full")

	log.Print(err)

	if err != nil {
		log.Fatal(err)
	}

	db.Query(`CREATE TABLE todos (
		name varchar(256),
		description varchar(1000)
	)`)
}
